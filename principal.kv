<MediumLabel@Label>:
    font_name: "fonts/FiraSans-Medium"
    color: (0, 0, 0, 1)

<BoldLabel@Label>:
    font_name: "fonts/FiraSans-Bold"
    color: (0, 0, 0, 1)

<ThinLabel@Label>:
    font_name: "fonts/FiraSans-Thin"
    color: (0, 0, 0, 1)

<MediumButton@Button>:
    font_name: "fonts/FiraSans-Medium"
    color: (0, 0, 0, 1)
    background_normal: ''
    background_color: (0.7725, 0.9882, 0.9412, 1)

<BoldButton@Button>:
    font_name: "fonts/FiraSans-Bold"
    color: (0, 0, 0, 1)
    background_normal: ''
    background_color: (0.7725, 0.9882, 0.9412, 1)

<ThinButton@Button>:
    font_name: "fonts/FiraSans-Thin"
    color: (0, 0, 0, 1)
    background_normal: ''
    background_color: (0.7725, 0.9882, 0.9412, 1)

<PrincipalLayout>:
    cols: 5

    canvas:
        Color:
            rgba: (1.0, 0.9412, 0.7922, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    Label
    Label

    GridLayout:
        rows: 2
        spacing: 50
        padding: 0, 50

        GridLayout:
            id: buttons_layout
            rows: 5
            spacing: 75
            padding: 0, 50

            MediumButton:
                text: "Abrir proyecto"
                size_hint_y: None
                height: 50
                on_release: root.soltar_dpdab(self)
            MediumButton:
                text: "Comprimir proyecto"
                size_hint_y: None
                height: 50
                on_release: root.soltar_dpdcp(self)
            MediumButton:
                id: crear_proyecto
                text: "Crear proyecto"
                size_hint_y: None
                height: 50
            MediumButton:
                id: editar_proyecto
                text: "Editar proyecto"
                size_hint_y: None
                height: 50
                on_release: root.soltar_dpdep(self)
        MediumButton:
            id: salir
            text: "Salir"
            size_hint_y: None
            height: 50
            background_color: (0.0039, 0.4588, 0.3647, 1)
            color: (1, 1 , 1, 1)
            on_release: exit()

    Label

    FloatLayout:

        SpinnerWidget:
            id: usuarios_spinner
            font_name: "fonts/FiraSans-Bold"
            size_hint_y: None
            height: 40
            pos_hint: {'top': 1, 'right': 1}
            values: ["Profesor", "Alumno"]
            on_text: root.usuario_cambio(self.text)
